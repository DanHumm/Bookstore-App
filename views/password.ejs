<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head.ejs', {
        title: "Change Password"
    }) %>
</head>
<body>
    <%- include('./partials/navbar.ejs') %>
<main>
    <section class="site-title">
        <div class="container">
            <h1 class="site-title__title">Change Password</h1>
        </div>
    </section>
    <div class="container">
        <form action="/change-password" method="POST" class="login-form" autocomplete="off"> <!-- Autocomplete off, prevents caching of sensitive data on public devices -->
            <fieldset>
                <legend class="sr-only"> Account Details </legend>
                
                <div class="login-form__group">
                    <label for="currentPassword"> Current Password </label>
                    <input name="currentPassword" id="currentPassword" type="password" placeholder="Enter Current Password..." class="login-form__username" required/>
                    <span class="login-form__error"><i class="fa fa-info-circle" aria-hidden="true"></i>  An error occured!</span>
                </div>
                <div class="login-form__group">
                    <label for="newPassword"> New Password </label>
                    <input name="newPassword" id="newPassword" type="password" placeholder="Enter New Password.." class="login-form__password" required/>
                    <span class="login-form__error"><i class="fa fa-info-circle" aria-hidden="true"></i>   Password not strong enough!</span>
                </div>
                <div class="login-form__group">
                    <label for="confirmPassword"> Confirm Password </label>
                    <input name="confirmPassword" id="confirmPassword" type="password" placeholder="Repeat Password.." class="login-form__password" required/>
                    <span class="login-form__error"><i class="fa fa-info-circle" aria-hidden="true"></i> Passwords do not match!</span>
                </div>
                <div class="button-group">
                    <button class="btn" type="submit"> Submit </button>
                </div>
            </fieldset>
        </form>
    </div>
</main>
<%- include('./partials/footer.ejs') %>
<noscript>
    <!-- Show all content if no JS  -->
</noscript>
</body>
</html>